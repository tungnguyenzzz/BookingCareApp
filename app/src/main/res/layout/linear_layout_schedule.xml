<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="8"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#C8DCF1"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewScheduleName"
                android:textSize="20dp"
                android:text="tung"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewScheduleDoctorName"
                android:textSize="14dp"
                android:text="Mieu ta"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewScheduleEmail"
                android:textSize="14dp"
                android:text="500k"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewScheduleDate"
                android:textSize="14dp"
                android:text="500k"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewScheduleTime"
                android:textSize="14dp"
                android:text="500k"
                />
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btRemove"
            android:text="Remove"
            android:layout_weight="1"
            android:layout_gravity="center"
            />
    </LinearLayout>


</androidx.cardview.widget.CardView>